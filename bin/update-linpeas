#!/bin/bash

repo="$HOME/tools/PEASS-ng"
[ ! -d "$repo" ] && echo "$repo not found." && echo "Run git clone https://github.com/carlospolop/PEASS-ng ~/tools/PEASS-ng" && exit 1

cd "$repo" &&
    git pull &&
    cd linPEAS &&
    python -m builder.linpeas_builder &&
    mv linpeas.sh ~/linpeas.sh &&
    echo linpeas.sh updated
